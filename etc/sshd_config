# Port 60022

AddressFamily inet
ListenAddress 0.0.0.0

Protocol 2

HostKey /app/.ssh/ssh_host_rsa_key2

# deprecated
# UsePrivilegeSeparation no

PermitRootLogin no

PasswordAuthentication no
ChallengeResponseAuthentication no

PubkeyAuthentication yes
AuthorizedKeysFile /app/.ssh/authorized_keys2

X11Forwarding no
PrintMotd no

# LogLevel DEBUG3
LogLevel VERBOSE

AcceptEnv LANG LC_*

PidFile /tmp/sshd.pid

ClientAliveInterval 120

# default value
ClientAliveCountMax 3
